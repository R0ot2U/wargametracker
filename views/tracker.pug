extends layout

block scripts
  script(src='/javascripts/gameController.js')

block content
  h1 GameId: #{gameData.game_id}
  form
    label(for='p1name') Player 1:
    input#p1name(type='text' name='p1name' value=gameData.player1_name)
    br
    br
    label(for='p2name') Player 2:
    input#p2name(type='text' name='p2name' value=gameData.player2_name)
    br
    br
    input(type='submit' value='Submit')
